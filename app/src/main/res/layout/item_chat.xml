<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Avatar (برای چت‌های عادی؛ برای Saved Messages مخفی) -->
        <ImageView
            android:id="@+id/imageAvatar"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_person"
        android:visibility="visible" />

        <!-- آیکون Saved Messages (برای ViewType خاص) -->
        <ImageView
            android:id="@+id/imageSavedIcon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_bookmark"
        android:tint="@color/blue_500"
        android:visibility="gone" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <!-- عنوان چت -->
            <TextView
                android:id="@+id/textTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Saved Messages"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- آخرین پیام (اختیاری) -->
            <TextView
                android:id="@+id/textLastMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Saved Messages"
                android:textColor="@color/gray"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- زمان -->
        <TextView
            android:id="@+id/textTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11:05 AM"
            android:textColor="@color/gray"
            android:textSize="12sp"
            android:layout_gravity="top|end" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>